<section class="homescreen m-0 flex flex-col w-screen justify-center mt-64 xl:mt-96 lg:mt-96">
  <h1 class="text-6xl  text-green-400 inline-flex justify-center">
      dato.rss <i class="fas text-3xl fa-rss-square text-teal-500"></i>
  </h1>
  <div class="inline-flex justify-center mt-3 sm:mt-3 xl:mt-3">
    <%= form_tag(search_entries_path, method: :get) do %>
      <%= text_field_tag 'q', params[:q], class: 'appearance-none border border-gray-300 py-3 px-3 text-grey-darkest w-min:60 w-96', placeholder: 'what are you looking for?', type: 'search' %>
    <% end %>
  </div>
  <div class="inline-flex justify-center mt-4 z sm:mt-4 xl:mt-4">
    <span class="w-auto text-sm  text-gray-500 leading-4 focus:outline-none focus:text-gray-600 transition ease-in-out duration-150">imported <a title="show latest entries" href="/entries" class="underline"><%= number_to_human(Feed.sum(:entries_count), format: '%n%u', units: { thousand: 'K', million: 'M' }) %> entries</a> from <a title="show feeds" href="/feeds" class="underline"><%= Feed.all.size %> feeds</a></span>
  </div>
</section>
